<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.activities.HomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_background"/>

    <TextView
        android:id="@+id/text_verification"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/chivo"
        android:text="Please Enter\nYour Veriï¬cation Code"
        android:textColor="@color/grey"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextCode"
        android:layout_width="200dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="210dp"
        android:backgroundTint="@color/turquoise"
        android:digits="0123456789"
        android:drawablePadding="10dp"
        android:inputType="phone"
        android:letterSpacing="0.5"
        android:maxLength="6"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="30sp" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:layout_above="@id/button_verify"/>

    <Button
        android:id="@+id/button_verify"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@drawable/rounded_button_turquoise"
        android:fontFamily="@font/chivo_bold"
        android:text="V E R I F Y"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</RelativeLayout>






